{{ 'main-contact.css' | asset_url | stylesheet_tag }}

<section class="contact">
  <div class="container">
    <h2 class="h1">{{ page.title }}</h2>
    <h3 class="h3 mt-32">Hours</h3>
    <div class="mt-32">{{ page.content }}</div>
    <div class="main-contact__form mt-64">
      {% form 'contact' %}
        {%- if form.posted_successfully? -%}
          <h3>Thank you</h3>
        {%- elsif form.errors -%}
          <ul class="form-status-list caption-large" role="list">
            <li>
              <a href="#ContactForm-email" class="link">
                {{ form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email }}
              </a>
            </li>
          </ul>
        {%- endif -%}
        <div class="contact-form__info d-flex justify-content-between align-items-center">
          <input
            type="text"
            name="contact[name]"
            id="name"
            placeholder="Name"
            class="w-100" />
          <input
            type="email"
            name="contact[email]"
            id="email"
            placeholder="Email"
            class="w-100" />
        </div>
        <input
          type="tel"
          name="contact[phone]"
          id="phone"
          placeholder="Phone"
          class="w-100 mt-16" />
        <textarea
          name="contact[body]"
          id="message"
          placeholder="Comment"
          class="w-100 message mt-16"
          rows="5"></textarea>
        <button class="mt-16 button black contact-form__btn" type="submit">Send</button>
        {% comment %} <div class="submit mt-16">
        <input type="submit" value="Send" />
        </div> {% endcomment %}
      {% endform %}
    </div>
  </div>

</section>